<?xml version="1.0" encoding="utf-8" ?>
<manifest>
  <control namespace="THControl" 
    constructor="THColorGrid" 
    version="0.0.1" 
    display-name-key="THColorGrid" 
    description-key="color grid allow fields change color" 
    control-type="standard">
    
    <!-- dataset node represents a set of entity records on CDS; allow more than one datasets -->
    <data-set name="dataset" 
      display-name-key="SimpleTableGridProperty_Display_Key">
	  </data-set>


    <property name="headerBackgroundColor" 
      display-name-key="headerBackgroundColor" 
      description-key="Background Color of header." 
      of-type="SingleLine.Text" usage="input" required="true" default-value="darkblue"/>

    <property name="headerForegroundColor" 
      display-name-key="headerForegroundColor" 
      description-key="Foreground Color of header." 
      of-type="SingleLine.Text" usage="input" required="true" default-value="white"/>

    <property name="rowBackColor" 
      display-name-key="rowBackColor" 
      description-key="Back Color of row." 
      of-type="SingleLine.Text" usage="input" required="true" default-value="lightblue"/>

    <property name="cellBackgroundColor" 
      display-name-key="cellBackgroundColor" 
      description-key="Background Color of Cell. Can also give a conditional expression." 
      of-type="SingleLine.Text" usage="input" required="true"/>
    
    <resources>
      <code path="index.ts" order="1"/>
      <css path="css/ColorGrid.css" order="1" />
      <resx path="strings/ColorGrid.1033.resx" version="1.0.0" />
    </resources>

    <!-- UNCOMMENT TO ENABLE THE SPECIFIED API
    <feature-usage>
      <uses-feature name="Device.captureAudio" required="true" />
      <uses-feature name="Device.captureImage" required="true" />
      <uses-feature name="Device.captureVideo" required="true" />
      <uses-feature name="Device.getBarcodeValue" required="true" />
      <uses-feature name="Device.getCurrentPosition" required="true" />
      <uses-feature name="Device.pickFile" required="true" />
      <uses-feature name="Utility" required="true" />
      <uses-feature name="WebAPI" required="true" />
    </feature-usage>
    -->
  </control>
</manifest>